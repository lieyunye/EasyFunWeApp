.voice_button
{
  display: flex;
  width: 100%;
  height: 100%;
  align-items: center;
}

.voice_button_left
{
  width: 100%;
}

.voice_animation
{
  margin-left: 30rpx;
  background: url(https://rescdn.yishihui.com/ysh/pic/users/userid_6437/head/head_1518187267778.jpg);
  width: 28rpx;
  height: 28rpx;
  animation: playAudioWhite 2s infinite;
}

@keyframes playAudioWhite {
  100%   { background: url(https://rescdn.yishihui.com/ysh/pic/users/userid_6437/head/head_1518187267778.jpg); }
  100%  { background: url(https://rescdn.yishihui.com/ysh/pic/users/userid_3/head/head_1492053696260.jpg); }
  100% { background: url(https://rescdn.yishihui.com/ysh/pic/users/userid_12457/head/head_1511856610061.jpeg); }
}

.voice_text
{
  text-align: center;
  margin-right:30rpx; 
  color: #ffffff;
  font-size: 14px;

}